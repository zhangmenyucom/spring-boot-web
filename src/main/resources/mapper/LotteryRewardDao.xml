<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.taylor.dao.LotteryRewardDao">

    <resultMap type="com.taylor.entity.LotteryRewardEntity" id="lotteryRewardMap">
        <result property="id" column="id"/>
        <result property="lotteryId" column="lottery_id"/>
        <result property="name" column="name"/>
        <result property="num" column="num"/>
    </resultMap>

	<select id="queryObject" resultType="com.taylor.entity.LotteryRewardEntity">
		select
			`id`,
			`lottery_id`,
			`name`,
			`num`
		from lottery_reward
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.taylor.entity.LotteryRewardEntity">
		select
    		`id`,
    		`lottery_id`,
    		`name`,
    		`num`
		from lottery_reward
		WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from lottery_reward
		WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.taylor.entity.LotteryRewardEntity" useGeneratedKeys="true" keyProperty="id">
		insert into lottery_reward(
			`lottery_id`,
			`name`,
			`num`)
		values(
			#{lotteryId},
			#{name},
			#{num})
	</insert>
	 
	<update id="update" parameterType="com.taylor.entity.LotteryRewardEntity">
		update lottery_reward 
		<set>
			<if test="lotteryId != null">`lottery_id` = #{lotteryId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="num != null">`num` = #{num}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from lottery_reward where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from lottery_reward where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>