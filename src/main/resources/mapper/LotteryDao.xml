<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.taylor.dao.LotteryDao">

    <resultMap type="com.taylor.entity.LotteryEntity" id="lotteryMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="picUrl" column="pic_url"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="userId" column="user_id"/>
        <result property="participantNum" column="participant_num"/>
        <result property="ticketsNum" column="tickets_num"/>
        <result property="luckyUserIds" column="lucky_user_ids"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryObject" resultType="com.taylor.entity.LotteryEntity">
		select
			`id`,
			`name`,
			`title`,
			`description`,
			`pic_url`,
			`type`,
			`status`,
			`user_id`,
			`participant_num`,
			`tickets_num`,
			`lucky_user_ids`,
			`start_time`,
			`end_time`,
			`create_time`,
			`update_time`
		from lottery
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.taylor.entity.LotteryEntity">
        select
        `id`,
        `name`,
        `title`,
        `description`,
        `type`,
        `pic_url`,
        `status`,
        `user_id`,
        `participant_num`,
        `tickets_num`,
        `lucky_user_ids`,
        `start_time`,
        `end_time`,
        `create_time`,
        `update_time`
        from lottery
        WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from lottery
        WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.taylor.entity.LotteryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into lottery(
			`name`,
			`title`,
			`description`,
			`pic_url`,
			`type`,
			`status`,
			`user_id`,
			`participant_num`,
			`tickets_num`,
			`lucky_user_ids`,
			`start_time`,
			`end_time`,
			`create_time`,
			`update_time`)
		values(
			#{name},
			#{title},
			#{description},
			#{picUrl},
			#{type},
			#{status},
			#{userId},
			#{participantNum},
			#{ticketsNum},
			#{luckyUserIds},
			#{startTime},
			#{endTime},
			#{createTime},
			#{updateTime})
	</insert>

    <update id="update" parameterType="com.taylor.entity.LotteryEntity">
        update lottery
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="title != null">`title` = #{title},</if>
            <if test="description != null">`description` = #{description},</if>
            <if test="picUrl != null">`pic_url` = #{picUrl},</if>
            <if test="type != null">`type` = #{type},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="participantNum != null">`participant_num` = #{participantNum},</if>
            <if test="ticketsNum != null">`tickets_num` = #{ticketsNum},</if>
            <if test="luckyUserIds != null">`lucky_user_ids` = #{luckyUserIds},</if>
            <if test="startTime != null">`start_time` = #{startTime},</if>
            <if test="endTime != null">`end_time` = #{endTime},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="updateTime != null">`update_time` = #{updateTime}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from lottery where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from lottery where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>