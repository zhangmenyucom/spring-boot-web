<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.taylor.dao.RewardItemsDao">

    <resultMap type="com.taylor.entity.RewardItemsEntity" id="rewardItemsMap">
        <result property="id" column="id"/>
        <result property="rewardId" column="reward_id"/>
        <result property="type" column="type"/>
        <result property="url" column="url"/>
        <result property="title" column="title"/>
        <result property="order" column="order"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.taylor.entity.RewardItemsEntity">
		select
			`id`,
			`reward_id`,
			`type`,
			`url`,
			`title`,
			`order`,
			`create_time`,
			`update_time`
		from reward_items
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.taylor.entity.RewardItemsEntity">
		select
    		`id`,
    		`reward_id`,
    		`type`,
    		`url`,
    		`title`,
    		`order`,
    		`create_time`,
    		`update_time`
		from reward_items
		WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from reward_items
		WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.taylor.entity.RewardItemsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into reward_items(
			`reward_id`,
			`type`,
			`url`,
			`title`,
			`order`,
			`create_time`,
			`update_time`)
		values(
			#{rewardId},
			#{type},
			#{url},
			#{title},
			#{order},
			#{createTime},
			#{updateTime})
	</insert>
	 
	<update id="update" parameterType="com.taylor.entity.RewardItemsEntity">
		update reward_items 
		<set>
			<if test="rewardId != null">`reward_id` = #{rewardId}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="title != null">`title` = #{title}, </if>
			<if test="order != null">`order` = #{order}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from reward_items where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from reward_items where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>